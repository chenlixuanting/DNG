<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.guet.navigator.web.pojo.LoginRecord" table="d_login_record">

        <id name="recordId" column="record_id">
            <generator class="uuid"/>
        </id>

        <many-to-one name="user" column="user_id" unique="true" class="com.guet.navigator.web.pojo.User"
                     cascade="save-update"
                     lazy="false"/>

        <many-to-one name="device" column="device_id" unique="true" class="com.guet.navigator.web.pojo.Device"
                     cascade="save-update" lazy="false"/>

    </class>
</hibernate-mapping>